    <modelVersion>4.0.0</modelVersion>

    <groupId>info.setmy</groupId>
    <artifactId>java-projects</artifactId>
    <version>1.2.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>java-projects</name>
    <description>Java and Groovy projects</description>
    <url>https://bitbucket.org/imreit/setmy.info</url>

    <properties>
        <info.setmy.version>1.2.0-SNAPSHOT</info.setmy.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <encoding.level>UTF-8</encoding.level>
        <maven.compiler.source>1.11</maven.compiler.source>
        <maven.compiler.target>1.11</maven.compiler.target>
        <java.version>11</java.version>
        <maven.build.timestamp.format>dd.MM.yyyy HH:mm</maven.build.timestamp.format>
        <buildTimestamp>${maven.build.timestamp}</buildTimestamp>
        <dependency.locations.enabled>false</dependency.locations.enabled>

        <junit5.version>5.2.0</junit5.version>
        <junit.platform.version>1.2.0</junit.platform.version>
        <mockito.version>2.21.0</mockito.version>
        <jacoco.version>0.8.2</jacoco.version>
        <failsafe.version>2.22.0</failsafe.version>
        <surefire.version>2.22.0</surefire.version>
        <log4j2.verions>2.11.1</log4j2.verions>
        <logback.verions>1.2.3</logback.verions>
        <slf4j.version>1.7.25</slf4j.version>
        <lucene.version>7.3.0</lucene.version>
        <groovy.version>2.4.15</groovy.version>
        <cucumber.version>1.2.5</cucumber.version>
        <pitest.version>1.4.2</pitest.version>
        <jersey.version>2.27</jersey.version>
        <jackson.version>2.9.6</jackson.version>
    </properties>

    <modules>
        <module>java-models</module>
        <module>java-services</module>
        <module>groovy-models</module>
        <module>groovy-services</module>
        <module>jwt-models</module>
        <module>java-linguistics</module>
        <module>java-accounting</module>
        <module>java-db</module>
        <module>java-document-db</module>
        <module>java-graph-db</module>
        <module>java-hr</module>
        <module>java-indexing</module>
        <module>java-reports</module>
        <module>java-scripting</module>
        <module>java-storage</module>
        <module>java-web-doc-format</module>
        <module>java-web</module>
        <module>springboot-start-project</module>
        <module>java-wf</module>
        <module>java-communication</module>
        <module>java-vcs</module>
        <module>java-modular-ssn</module>
        <module>documentation</module>
        <module>java-rest-client</module>
