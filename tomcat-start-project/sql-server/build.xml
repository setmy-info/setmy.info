<?xml version="1.0" encoding="UTF-8"?>

<project name="HSQLDB setup project" default="chmod" basedir=".">
    <!-- URL encoded
    http://www.opinionatedgeek.com/dotnet/tools/htmlencode/encode.aspx
    -->
    <property name="file.location" value="http://downloads.sourceforge.net/project/hsqldb/hsqldb/hsqldb_2_3/hsqldb-2.3.4.zip"/>
    <property name="file.name"     value="hsqldb.zip" />

    <target name="hsqldb.zip">
	<get src="${file.location}" dest="${file.name}" />
    </target>

    <target name="unzip">
	<unzip src="${file.name}" dest="."/>
    </target>

    <target name="chmod">
	<chmod file="hsqldb/demo/*.sh" perm="ugo+rx"/>
	<chmod file="hsqldb/bin/hsqldb" perm="ugo+rx"/>
	<chmod file="hsqldb/bin/runUtil.sh" perm="ugo+rx"/>
    </target>

    <target name="server">
	<exec executable="hsqldb/demo/runServer.sh" />
    </target>

    <target name="manager">
	<exec executable="hsqldb/demo/runManager.sh" />
    </target>

</project>
