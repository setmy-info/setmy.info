<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping
    package="ee.pub.hibernate.model"
    xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    
    <class name="Country" table="country">
        <id column="id" name="id" type="java.lang.Long">
            <generator class="sequence">
                <param name="sequence">country_id_seq</param>
            </generator>
        </id>
        <property column="name" name="name" type="java.lang.String"/>
        <many-to-one name="world" class="World" column="world_id" cascade="all" not-null="true"/>
        <list name="companies"
              table="company"
              inverse="false"
              cascade="all">
            <key>
                <column name="country_id" not-null="true" />
            </key>
            <list-index column="companyIndex"/>
            <one-to-many class="Company"/>
        </list>
    </class>
</hibernate-mapping>