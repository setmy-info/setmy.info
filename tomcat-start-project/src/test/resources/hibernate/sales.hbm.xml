<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping
    package="ee.pub.hibernate.model"
    xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">

    <class name="SalesObject" table="salesobject">
        <id column="id" name="id" type="java.lang.Long">
            <generator class="sequence">
                <param name="sequence">salesobject_id_seq</param>
            </generator>
        </id>
        <discriminator column="sales_type" type="java.lang.String"/>
        <property column="name" name="name" type="java.lang.String"/>
        <many-to-one name="company" class="Company" column="company_id" cascade="all" not-null="true"/>
        <subclass name="Product" extends="SalesObject" discriminator-value="product"/>
        <subclass name="Service" extends="SalesObject" discriminator-value="service"/>
    </class>
    
</hibernate-mapping>