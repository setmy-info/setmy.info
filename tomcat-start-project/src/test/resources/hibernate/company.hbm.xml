<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping
    package="ee.pub.hibernate.model"
    xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping http://www.hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd">
    
    <class name="Company" table="company">
        <id column="id" name="id" type="java.lang.Long">
            <generator class="sequence">
                <param name="sequence">company_id_seq</param>
            </generator>
        </id>
        <property column="name" name="name" type="java.lang.String"/>
        <many-to-one name="country" class="Country" column="country_id" cascade="all" not-null="true"/>
        <list name="salesObjects"
              table="salesobject"
              inverse="false"
              cascade="all">
            <key>
                <column name="company_id" not-null="true" />
            </key>
            <list-index column="salesObjectIndex"/>
            <one-to-many class="SalesObject"/>
        </list>
    </class>
</hibernate-mapping>