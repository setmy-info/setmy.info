[Unit]
Description=Micronaut project service
After=syslog.target

[Service]
Type=simple
User=microservice
Group=microservice
ExecStart=/opt/has/bin/micronaut-start-project start
ExecStop=/opt/has/bin/micronaut-start-project stop
ExecReload=/opt/has/bin/micronaut-start-project reload

[Install]
WantedBy=multi-user.target
