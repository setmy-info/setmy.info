<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>false</withJansi>
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) -TEST- %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) -
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
        <!-- logger name="io.micronaut.context" level="info"/>
        <logger name="io.micronaut" level="info"/>
        <logger name="io.micronaut.context.condition" level="info"/>
        <logger name="io.micronaut.context.lifecycle" level="info"/ -->
    </root>

    <!--logger name="io.micronaut.context" level="info"/>
    <logger name="io.micronaut" level="info"/>
    <logger name="io.micronaut.context.condition" level="info"/>
    <logger name="io.micronaut.context.lifecycle" level="info"/-->

</configuration>
